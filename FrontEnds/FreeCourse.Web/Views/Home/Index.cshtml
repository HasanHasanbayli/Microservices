@model List<CourseViewModel>
@{
    ViewData["Title"] = "Home Page";
    var count = 0;
}


<h2>Courses</h2>
<hr/>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        count++;
        if (count == 1 || count % 3 == 1)
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2'>")
        }
        <div class="col">
            <div class="card">
                <img src="@item.StockPictureUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text">@item.ShortDescription</p>
                    <h4 class="text-primary">@item.Price USD</h4>
                    <a class="btn btn-success" asp-controller="Home" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                </div>
            </div>
        </div>
        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }
    }
}