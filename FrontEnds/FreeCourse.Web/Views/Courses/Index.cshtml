@model List<CourseViewModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Courses</h5>
            <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Create Course</a>
            @if (Model.Any())
            {
                <table class="table table-striped table-bordered">
                    <thead>
                    <tr>
                        <th>Image</th>
                        <th>Course Name</th>
                        <th>Price</th>
                        <th>Duration</th>
                        <th>Category</th>
                        <th>Edit</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img style="width: 72px" src="@item.StockPictureUrl" class="img-thumbnail" alt="">
                            </td>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.Feature.Duration</td>
                            <td>@item.Category.Name</td>
                            <td>
                                <a asp-controller="Courses" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info">
                    Courses not found
                </div>
            }
        </div>
    </div>
</div>